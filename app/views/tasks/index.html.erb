<div class="container">
    <h1>Tasks#index</h1>
    <p>Find me in app/views/tasks/index.html.erb</p>

    <% @todos.each_slice(3) do |todos| %>
    <div class="card-deck">
        <% todos.each do |todo| %>
            <% if todo.completed? %>
                <div class="card">
                    <%= image_tag todo.task.photo, class: "card-img-top" %>
                    <div class="card-body">
                        <h3 class='card-title'><%= todo.task.name %></h3>
                        <h3 class='card-title'><%= todo.task.description %></h3>
                        <%= link_to "Listo", update_todo_path(todo), method: :patch, class: "btn btn-success" %>
                        <%= link_to 'Ver', todo_path(todo), class:"btn btn-info" %>
                    </div>
                </div>
            <% else %>
                <div class="card">
                    <%= image_tag todo.task.photo, class: "card-img-top" %>
                    <div class="card-body">
                        <h3 class='card-title'><%= todo.task.name %> </h3>
                        <h3 class='card-title'><%= todo.task.description %></h3>
                        <%= link_to "Pendiente", update_todo_path(todo), method: :patch, class: "btn btn-warning" %>
                        <%= link_to 'Ver', todo_path(todo), class:"btn btn-info" %>
                    </div>
                </div>
            <% end %>
        <% end %>
    </div>
    <br>
    <% end %>
</div>

